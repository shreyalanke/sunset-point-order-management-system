{
  "name": "sunset-point-order-management-system",
  "version": "1.0.0",
  "private": true,
  "description": "Sunset Point",
  "workspaces": [
    "counter",
    "admin",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:counter\" \"npm run dev:admin\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:counter": "npm run dev --workspace=counter",
    "dev:admin": "npm run dev --workspace=admin",
    "build": "npm run build --workspaces"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
